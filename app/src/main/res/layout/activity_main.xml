<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_helmet"
        android:layout_width="316dp"
        android:layout_height="432dp"
        android:contentDescription="logo"
        android:scaleType="fitXY"
        android:src="@drawable/helmet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/interblack"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_desc"
        android:layout_width="299dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/interlight"
        android:text="@string/title_desc"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label" />

    <TextView
        android:id="@+id/tv_upload_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload a file"
        android:textSize="20sp"
        android:layout_marginBottom="150dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/tv_camera_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_camera_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_upload_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_upload_label"
        app:layout_constraintTop_toTopOf="@id/tv_upload_label" />

    <ImageButton
        android:id="@+id/btn_upload"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="upload"
        android:padding="0dp"
        android:src="@drawable/ic_upload"
        app:layout_constraintEnd_toEndOf="@id/tv_upload_label"
        app:layout_constraintStart_toStartOf="@id/tv_upload_label"
        app:layout_constraintTop_toBottomOf="@id/tv_upload_label" />

    <ImageButton
        android:id="@+id/btn_camera"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="capture"
        android:src="@drawable/camera"
        app:layout_constraintEnd_toEndOf="@id/tv_camera_label"
        app:layout_constraintStart_toStartOf="@id/tv_camera_label"
        app:layout_constraintTop_toBottomOf="@id/tv_camera_label" />


</androidx.constraintlayout.widget.ConstraintLayout>

